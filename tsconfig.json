{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "lib": ["ES2022"],
        "module": "CommonJS",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "outDir": "dist",
        "paths": {
            "@/*": ["./src/*"],
            "@core": ["./src/core/*"],
            "@docs": ["./src/docs/*"],
            "@middleware": ["./src/middleware/*"],
            "@routes": ["./src/routes/*"],
            "@schemas": ["./src/schemas/*"],
            "@services": ["./src/services/*"],
            "@tools": ["./src/tools/*"],
            "@types": ["./src/types/*"]
        },
        "resolveJsonModule": true,
        "rootDir": "src",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "stripInternal": true,
        "target": "ES2022",
        "typeRoots": ["node_modules/@types", "./src/types"],
        "types": ["mocha", "node"]
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src/**/*.ts"]
}
